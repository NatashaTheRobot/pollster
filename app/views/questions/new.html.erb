<h1>Questions</h1>
<ul>
	<% @poll.questions.each do |question| %>
		<% unless question.id.nil? %>
			<li><%= question.text  %></li>
		<% end %>
	<% end %>
</ul>		

<%= form_for(@question, url: poll_questions_path(@poll.id)) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	
  <div class="field">
	<%= f.label :question %>
    <%= f.text_field :text %><br />
  </div>

  <div class="actions">
    <%= f.submit("add another question") %>
  </div>
<% end %>