= form_for @poll do |f|
  - if @poll.errors.any?
    #error_explanation
      %h2
        = pluralize(@poll.errors.count, "error")
        prohibited this poll from being saved:
      %ul
        - @poll.errors.full_messages.each do |msg|
          %li= msg
  .field
    %h4 Poll Name
    %br/
    = f.text_field :name
  .questions
    %h4 Questions
    %br/
    = f.fields_for :questions do |q|
      = q.label :text
      = q.text_field :text
  .actions
    = f.submit "Create Poll", class: "btn btn-success btn-medium"
