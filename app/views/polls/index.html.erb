<h1>Listing polls</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Slug</th>
    <th>Admin Slug</th>
    <th></th>
    <th></th>
  </tr>

<% @polls.each do |poll| %>
  <tr>
    <td><%= poll.name %></td>
    <td><%= poll.slug %></td>
	<td><%= poll.admin_slug %></td>
    <td><%= link_to 'Show', poll_path(poll.slug) %></td>
    <td><%= link_to 'Edit', edit_poll_path(poll.admin_slug) %></td>
    <td><%= link_to 'Destroy', delete_poll_path(poll.admin_slug), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

